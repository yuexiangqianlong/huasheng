<% include header %>
<link rel="stylesheet" href="http://cache.amap.com/lbs/static/main.css?v=1.0"/>
<script type="text/javascript" src="http://webapi.amap.com/maps?v=1.3&key=a5ab9d885555224087826e975dcd526f"></script> 
<script type="text/javascript">
function go(id){
		$.get('/search/map?id='+id,function(rehtml){
         //alert(rehtml);
      $('#main').html(rehtml);
});   
		return true;
	}
</script>
<script>
searchForm.keywords.value="<%-keywords%>";
</script>
<div class="row">
	      <div class="col-sm-1"></div>
	      <div class="col-sm-4">
	      	<table class="table table-bordered">
			  <tbody>
			  <% rsGoods.forEach(function(row){ %>
			    <tr>
			      <td rowspan="2" ><img style="width: 150px;height: 150px" src='../<%-row.goodsimg%>'/></td>
			      <td>
			      	<%-row.goodsname%><br/>
			      	<%-row.goodsintro%>
			      </td>
			    </tr>
			    <tr>
			    <td>价格:<%-row.price%>&nbsp;好评度:<%-row.praise%></td>
			    <tr>
			    <td align='right'>
			    <button type="button" class="btn btn-danger btn-xs">立即购买</button>&nbsp;
			    <a href="/pay/putshopping?goodsid=<%-row.goodsid%>" target='_blank'><button type="button" class="btn btn-danger btn-xs">放入购物车</button></a>&nbsp;
			    <button type="button" class="btn btn-danger btn-xs" onclick="return go('<%-row.id%>')">go</button>&nbsp;
			    </td>
			    </tr>	
			    </tr>
			  <% }) %>
			  </tbody>
			</table>
	      </div>
	      <div class="col-sm-6" id="main">地图
        
	      </div>
	     
	      <div class="col-sm-1"></div>

	      <!-- 模态框（Modal） -->
	      <!-----------模态对话框----------------------->
   <div class="modal fade" id="myModal">	
    <div class="modal-dialog">
        <div class="modal-content">  
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
</body>
</html>